<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kitri.dokky.category.CategoryDao">

	<resultMap id="categoryResult" type="com.kitri.dokky.category.Category">
		<result column="category_1" property="category_1" />
		<result column="category_2" property="category_2" />
	</resultMap>
	
	<insert id="insertCategory" parameterType="com.kitri.dokky.category.Category">
		insert into category_tb values(#{category_1}, #{category_2})
	</insert>
	
	<select id="selectCategory" parameterType="String" resultMap="categoryResult">
		select * from category_tb where category_1=#{category_1}
	</select>
	
	<update id="updateCategory" parameterType="com.kitri.dokky.category.Category">
		update category_tb set category_2=#{category_2}
						   where category_1=#{category_1}
	</update>
	
	<delete id="deleteCategory" parameterType="com.kitri.dokky.category.Category">
		delete from category_tb where category_1=#{category_1}
								and category_2=#{category_2}
	</delete>
</mapper>